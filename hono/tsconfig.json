{
    "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "./dist"
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }
  